<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/drowable_lines">

    <ImageView
        android:id="@+id/dishIconDish"
        android:layout_width="76dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_typedish_any" />

    <TextView
        android:id="@+id/dishTitleDish"
        android:layout_width="243dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:textSize="20sp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/dishIconDish"
        app:layout_constraintStart_toEndOf="@+id/dishIconDish"
        app:layout_constraintTop_toTopOf="@+id/dishIconDish" />
</androidx.constraintlayout.widget.ConstraintLayout>